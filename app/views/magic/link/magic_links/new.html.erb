<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_with url: magic_links_path, data: {remote: false} do |f| %>
      <%= f.email_field :email, label: "Enter your email", autofocus: true %>
      <%= f.submit "Email me a sign in link", class: "btn btn-primary btn-block" %>
    <% end %>
    <br>
    <%= link_to "Back", :back %>
  </div>
</div>
